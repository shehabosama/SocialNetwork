<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SetupActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/formLogo"
        android:text="r e g i s t e r"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:layout_marginBottom="30dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="92dp"
        android:src="@drawable/backgroundprof"
        android:layout_marginTop="70dp"
        android:id="@+id/setup_profile_image"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_below="@id/setup_profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/trans_white_rectangle"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="@dimen/padding_10"

        >
        <AutoCompleteTextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="user name"
            android:background="@drawable/settings_bacground"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawableLeft="@drawable/username"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:paddingStart="10dp"
            android:id="@+id/setup_userName"
            android:layout_marginBottom="10dp"
            />
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="full name"
            android:background="@drawable/settings_bacground"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawableLeft="@drawable/name"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:paddingStart="10dp"
            android:inputType="text"
            android:id="@+id/setup_fullName"
            android:layout_marginBottom="10dp"

            />
        <AutoCompleteTextView

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="country"
            android:background="@drawable/settings_bacground"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawableLeft="@drawable/country"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            android:paddingStart="10dp"
            android:inputType="text"
            android:id="@+id/setup_countryName"
            android:layout_marginBottom="10dp"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="Register"
            android:id="@+id/setup_information_button"
            android:textStyle="normal"
            android:background="@drawable/register_button"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="36dp"
            />
    </LinearLayout>

</RelativeLayout>