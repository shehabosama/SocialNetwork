<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#676464" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#11000000"
                android:endColor="#00b5b1b1"
                android:angle="90"/>

            <solid android:color="#ff0022"></solid>
            <stroke
                android:width="1dp"
                android:color="#000000">
            </stroke>
            <corners
                android:radius="100dp"
                >

            </corners>
        </shape>
    </item>
</selector>